<% include partials/header %>

<div class="container">
        <header class="jumbotron">
                <div class="container">
                        <h1>Welcome to YelpCamp!</h1>
                        <p>View our handpicked campgrounds from all over the world</p>
                        <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
                </div>
        </header>
        <div class="row" style="display:flex; flex-wrap: wrap;">
                <% campgrounds.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6" >
                        <div class="thumbnail">
                                <img src="<%= camp.image %>" alt="Picture of <%= camp.name %>">
                                <div class="caption">
                                        <h4><%= camp.name %></h4>
                                </div>
                        </div>
                </div>
        <% }); %>
        </div>




</div>

<% include partials/footer %>
